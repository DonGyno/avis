{% extends 'base.html.twig' %}

{% block title %} Liste Fiches Prospection - {{ parent() }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1 class="center-align"> Liste de vos fiches de prospection</h1>
            </div>
        </div>
        <div class="row mt-3">
            {% if fiches is defined %}
                <table class="highlight centered responsive-table">
                    <thead>
                    <tr>
                        <th>Nom de l'entreprise</th>
                        <th>Adresse de l'entreprise</th>
                        <th>Email de l'entreprise</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for fiche in fiches %}
                        <tr>
                            <td>{{ fiche.nomEntreprise }}</td>
                            <td>{{ fiche.rueEntreprise }} {{ fiche.codePostalEntreprise }} {{ fiche.villeEntreprise }}</td>
                            <td>{{ fiche.emailEntreprise }}</td>
                            <td>
                                <a href="{{ path('app_user_modifier_fiche_prospection', {id: fiche.id}) }}" class="btn-floating monpro"><i class="material-icons large" title="Modifier">edit</i></a>
                                <a href="#" class="btn-floating monpro"><i class="material-icons large" title="Démarchage Email">email</i></a>
                                <a href="#" class="btn-floating monpro"><i class="material-icons large" title="Démarchage Téléphonique">add_ic_call</i></a>
                                <a href="#" class="btn-floating monpro"><i class="material-icons large" title="Démarchage Courrier Postal">markunread_mailbox</i></a>
                                <a href="#" class="btn-floating monpro"><i class="material-icons large" title="Démarchage Physique">record_voice_over</i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
        <div class="row mt-4 mb-4">
            <a href="{{ path('app_index_index') }}" class="btn monpro waves-effect waves-light center">Retour à l'administration</a>
        </div>
    </div>
{% endblock %}