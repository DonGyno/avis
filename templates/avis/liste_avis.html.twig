{% extends 'base.html.twig' %}

{% block title %} Liste Avis - {{ parent() }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1 class="center-align"> Liste des avis</h1>
            </div>
        </div>
        <div class="row mt-3">
            {% if avis is defined %}
                <table class="highlight centered responsive-table">
                    <thead>
                    <tr>
                        <th>Nom destinataire</th>
                        <th>Prénom destinataire</th>
                        <th>Email destinataire</th>
                        <th>Entreprise concernée</th>
                        <th>Statut de l'enquête</th>
                        <th>Date d'envoi</th>
                        <th>Date réponse</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for avi in avis %}
                        <tr>
                            <td>{{ avi.nomDestinataire }}</td>
                            <td>{{ avi.prenomDestinataire }}</td>
                            <td>{{ avi.emailDestinataire }}</td>
                            <td>{{ avi.entrepriseConcernee.nom }}</td>
                            <td class="{% if avi.statutAvis == "En attente de réponse" %}waiting{% else %}answered{% endif %}">{{ avi.statutAvis }}</td>
                            <td>{{ avi.dateEnvoiEnquete|date('d/m/Y') }}</td>
                            <td>{% if avi.dateReponseEnquete is not null %}{{ avi.dateReponseEnquete|date('d/m/Y') }}{% else %} Pas de réponse {% endif %}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
        <div class="row mt-4">
            <a href="{{ path('app_index_index') }}" class="btn monpro waves-effect waves-light center">Retour à l'administration</a>
        </div>
    </div>
{% endblock %}