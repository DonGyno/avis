{% extends 'base.html.twig' %}

{% block title %} Liste Utilisateurs - {{ parent() }} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1 class="center-align"> Liste des utilisateurs</h1>
            </div>
        </div>
        <div class="row mt-3">
            {% if utilisateurs is defined %}
            <table class="highlight centered responsive-table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for utilisateur in utilisateurs %}
                    <tr>
                        <td>{{ utilisateur.nom }}</td>
                        <td>{{ utilisateur.prenom }}</td>
                        <td>{{ utilisateur.email }}</td>
                        <td>
                            <a href="{{ path('app_admin_editer_utilisateur', {id: utilisateur.id}) }}" class="btn-floating monpro"><i class="material-icons large">edit</i></a>
                            <a href="{{ path('app_admin_supprimer_utilisateur', {id: utilisateur.id}) }}" class="btn-floating monpro"
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');"
                            ><i class="material-icons large">delete</i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </div>
        <div class="row mt-4">
            <a href="{{ path('app_index_admin') }}" class="btn monpro waves-effect waves-light center">Retour à l'administration</a>
        </div>
    </div>
{% endblock %}